# AI智能视频剪辑应用 - 环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# ========================================
# 后端配置 (Python FastAPI)
# ========================================

# 后端服务地址和端口
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000

# 调试模式 (开发环境设为 true，生产环境设为 false)
DEBUG=true

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 允许的跨域来源 (开发环境)
CORS_ORIGINS=http://localhost:1420,tauri://localhost,http://tauri.localhost

# ========================================
# 前端配置 (React + Vite)
# ========================================

# API 基础 URL
VITE_API_BASE_URL=http://127.0.0.1:8000

# WebSocket 连接 URL
VITE_WS_URL=ws://127.0.0.1:8000/ws

# 应用标题
VITE_APP_TITLE=AI智能视频剪辑

# 应用版本
VITE_APP_VERSION=1.0.0

# ========================================
# 视频处理配置
# ========================================

# 支持的视频格式 (逗号分隔)
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov,mkv,wmv,flv,webm

# 最大文件大小 (MB)
MAX_FILE_SIZE_MB=1024

# 临时文件目录
TEMP_DIR=./temp

# 输出文件目录
OUTPUT_DIR=./output

# FFmpeg 可执行文件路径 (留空则使用系统 PATH)
FFMPEG_PATH=

# ========================================
# 性能配置
# ========================================

# 最大并发处理任务数
MAX_CONCURRENT_TASKS=2

# 处理超时时间 (秒)
PROCESSING_TIMEOUT=3600

# WebSocket 心跳间隔 (秒)
WEBSOCKET_HEARTBEAT_INTERVAL=30

# ========================================
# 安全配置
# ========================================

# JWT 密钥 (生产环境请使用强密码)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# 会话超时时间 (秒)
SESSION_TIMEOUT=3600

# ========================================
# 数据库配置 (可选，用于任务持久化)
# ========================================

# 数据库类型 (sqlite, postgresql, mysql)
DATABASE_TYPE=sqlite

# SQLite 数据库文件路径
SQLITE_DB_PATH=./data/app.db

# PostgreSQL 连接字符串 (如果使用 PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# ========================================
# 开发配置
# ========================================

# 热重载 (开发环境)
HOT_RELOAD=true

# 自动打开浏览器 (开发环境)
AUTO_OPEN_BROWSER=false

# 开发服务器端口
DEV_SERVER_PORT=1420

# ========================================
# 生产配置
# ========================================

# 生产环境标识
PRODUCTION=false

# 错误报告 (生产环境)
ENABLE_ERROR_REPORTING=false

# 性能监控 (生产环境)
ENABLE_PERFORMANCE_MONITORING=false

# ========================================
# 高级配置
# ========================================

# OpenCV 线程数 (0 表示自动检测)
OPENCV_NUM_THREADS=0

# 内存限制 (MB)
MEMORY_LIMIT_MB=2048

# GPU 加速 (如果支持)
ENABLE_GPU_ACCELERATION=false

# 缓存大小 (MB)
CACHE_SIZE_MB=256