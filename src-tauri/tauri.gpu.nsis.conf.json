{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SuperAIAutoCutVideo",
  "version": "1.0.4",
  "identifier": "com.superautocutvideo.app",
  "build": {
    "devUrl": "http://127.0.0.1:1420/",
    "frontendDist": "../frontend/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "languages": ["English"]
      }
    },
    "resources": [
      "resources/ffmpeg.exe",
      "resources/ffprobe.exe",
      "resources/NOTICE-FFmpeg.txt"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:* http://localhost:* ws://127.0.0.1:* ws://localhost:*; img-src 'self' data: blob:; media-src 'self' http://127.0.0.1:* http://localhost:* data: blob:; style-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {}
}
