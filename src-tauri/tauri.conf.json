{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SuperAIAutoCutVideo",
  "version": "1.0.2",
  "identifier": "com.superautocutvideo.app",
  "build": {
    "beforeBuildCommand": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Set-Location ../frontend; npm run build\"",
    "devUrl": "http://localhost:1420/",
    "frontendDist": "../frontend/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "languages": ["English"]
      }
    },
    "resources": [
      "resources/*"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:* http://localhost:* ws://127.0.0.1:* ws://localhost:*; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {}
}
